@page "/consent-complete"
@{
    ViewData["Title"] = "Consent Complete";
    Layout = null; // No layout for clean look
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Consent Complete - Copilot Connector</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
        <div class="card shadow-lg" style="max-width: 600px; width: 100%;">
            <div class="card-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                
                <h1 class="h2 text-success mb-3">Admin Consent Granted!</h1>
                
                <p class="lead mb-4">
                    Administrator consent has been successfully granted for the Microsoft Copilot Connector application.
                </p>
                
                <div class="alert alert-info mb-4">
                    <h6><i class="bi bi-info-circle"></i> Next Steps</h6>
                    <p class="mb-0">
                        Return to the setup window and click <strong>"Continue Setup"</strong> to complete the External Connection creation process.
                    </p>
                </div>
                
                <hr class="my-4">
                
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-success btn-lg" onclick="window.close()">
                        <i class="bi bi-x-circle"></i> Close This Tab
                    </button>
                </div>
                
                <div class="mt-4">
                    <small class="text-muted">
                        <i class="bi bi-lightbulb"></i>
                        This tab will automatically close in <span id="countdown">30</span> seconds
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-close functionality
        let countdown = 30;
        const countdownElement = document.getElementById('countdown');
        
        const timer = setInterval(() => {
            countdown--;
            countdownElement.textContent = countdown;
            
            if (countdown <= 0) {
                clearInterval(timer);
                window.close();
            }
        }, 1000);

        // Try to close the tab immediately if possible
        document.addEventListener('DOMContentLoaded', function() {
            // Some browsers allow immediate close if the tab was opened by script
            // This is a fallback - the button and timer are the primary methods
        });
    </script>
    
    <style>
        .min-vh-100 {
            min-height: 100vh;
        }
        
        .card {
            border: none;
            border-radius: 1rem;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        
        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
</body>
</html>
