            // Check if state is recent (within last 10 minutes)
            if (state.TryGetProperty("Timestamp", out var timestamp))
            {
                var stateTime = new DateTime(timestamp.GetInt64());
                if (DateTime.UtcNow - stateTime > TimeSpan.FromMinutes(10))
                {
